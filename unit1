@pytest.mark.parametrize("test_input,expected_output", [
    (9999, 'SUCCESS'),
    (9998, 'SUCCESS')
])
def test_get(test_input, expected_output):
    response = uri_get(GET_URL + '/' + str(test_input))
    assert response['request_status'] == expected_output


